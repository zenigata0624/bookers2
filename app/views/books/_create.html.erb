<h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
      <div class="form_group">
      <h4>Title</h4>
      <%= f.text_field :title %>
      </div>
      <div class="form_group">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      </div>
      <div class="form_groupmt-2">
      <%= f.submit 'Create Books' %>
      </div>
      <% end %>