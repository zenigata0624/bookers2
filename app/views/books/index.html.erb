  <body>
      <%= render "books/flash" %>
  </body>
      <div class ='container px-5 px-sm-0'>
     <% if @book.errors.any? %>
      <%= @book.errors.count %> errors
     <ul>
     <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
     <% end %>
    </ul>
     <% end %>
     <div class='row m-auto'>
     <div class="col-md-3 ">
      <%= render 'users/info', user: @user %>
       <%= render 'books/create', book: @book %>
     </div>
     
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class ='table table-hover table-inverse'>
      <thead>
      <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <tr>
           <% @books.each do |book| %>
          <td>
          <%= link_to image_tag(book.user.get_profile_image(100,100)),user_path(book.user.id)%>
          </td>
           <td>
           <%=link_to book.title, book_path(book.id)  %>
           <td><%= book.body %></td>
           <td><% if book.favorited_by?(current_user) %>
            <p><%= link_to book_favorites_path(book.id),method: :delete do %>
               <i class="far fa-heart"></i>
                <% end %></p>
             <% else %>
              <p><%= link_to book_favorites_path(book.id),method: :post do %>
                  <i class="fas fa-heart unlike-btn"></i>
              <% end %></p>
            <% end %></td>
            <td>
             <p><%= link_to "コメント数：#{book.book_comments.count} ", book_path(book.id) %></p>
            </td>
        </tr>
        <%end%>
       </tbody>
     </table>
     <%= paginate @books %>
     </div>
  </div>
</div>