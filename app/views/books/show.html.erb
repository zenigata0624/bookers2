 <body>
   <%= render "books/flash" %>
  </body>
<div class ='container px-5 px-sm-0'>
 <div class='row'>
  <div class="col-md-3">
    <%= render 'users/info', user: @user %>
      <%= render 'books/create', book: @book %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h2 class ="pt-4" >Book detail</h2>
    <table class ='table table-hover table-inverse'>
      <thead>
      <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag @book.user.get_profile_image(100,100)  %>
            <% end %>
            <P>
             <%= link_to @user.name ,user_path(@user.id)  %>
             </p>
            </td>
            <td>
             <%=link_to @book.title, book_path(@book.id)  %>
             </td>
             <td><%=@book.body %></td>
             <td id="favorite_buttons_<%= @book.id %>">
              <%= render "favorites/favorite", book: @book %>
            </td>
             <td id = "comments-area-counter"> 
               <%= render "book_comments/counter", book: @book %>
              </td>
            <% if @book.user == current_user %>
             <td>
               <%=link_to "Edit", edit_book_path %>
             </td>
             <td>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
            <% end %>
            </td>
          </tr>
       </tbody>
    </table>
     <div id= "comments-area-index"> 
       <%= render "book_comments/comment", book: @book ,book_comment: @book_comment  %>
       </div>
     </div>
   </div>
 </div>