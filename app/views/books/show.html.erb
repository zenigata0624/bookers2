 <body>
   <%= render "books/flash" %>
  </body>
<div class ='container px-5 px-sm-0'>
 <div class='row'>
  <div class="col-md-3">
    <%= render 'users/info', user: @user %>
      <%= render 'books/create', book: @book %>
    </div>
  <div class="col-md-8 offset-md-1">
    <h2 class ="pt-4" >Book detail</h2>
    <table class ='table table-hover table-inverse'>
      <thead>
      <tr>
      <th></th>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
            <%= image_tag @book.user.get_profile_image(100,100)  %>
            <% end %>
            <P>
             <%= link_to @user.name ,user_path(@user.id)  %>
             </p>
            </td>
            <td>
             <%=link_to @book.title, book_path(@book.id)  %>
             </td>
             <td><%=@book.body %></td>
             <td>
              <%= render "books/favorites", book: @book %>
            </td>
             <td>
              <p><%= link_to "コメント数：#{@book.book_comments.count} ", book_path(@book.id) %></p>
              </td>
            <% if @book.user == current_user %>
             <td>
               <%=link_to "Edit", edit_book_path %>
             </td>
              <td>
              <%= link_to "Destroy", book_path(@book), method: :delete %>
               </td>
            <% end %>
          </tr>
       </tbody>
    </table>
            
     <table>
        <thead>
         <tr>
          <th></th>
          <th></th>
         </tr>
          </thead>
           <tbody>
            <% @book.book_comments.each do |book_comment| %>
              <tr>
                <th>
                 <%= image_tag book_comment.user.get_profile_image(100,100) %>
                 <P><%= link_to book_comment.user.name,user_path(book_comment.user.id)  %></p>
                 </th>
                 <th>
                 <%= book_comment.comment %>
                 <% if book_comment.user == current_user %>
                 <%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
                  <% end %>
                 </th>
                </tr>
                <% end %>
              </tbody>
           </table>
            <div class="mt-1">
               <%= form_with model: [@book, @book_comment] do |f| %>
               <%= f.text_area :comment, rows: '6' %>
               <%= f.submit "送信" %>
               <% end %>
           </div>
     </div>
   </div>
 </div>
