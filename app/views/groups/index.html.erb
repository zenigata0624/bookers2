 <body>
   <%= render "books/flash" %>
  </body>
  <div class ='container px-5 px-sm-0'>
    <div class='row'>
     <div class="col-md-2">
      <%= render 'users/info', user: @user  %>
       <%= render 'books/create',books: @book %>
     </div>
      <div class="col-md-8 offset-md-1">
        <h2>Groups</h2>
        <table class ='table table-hover table-inverse'>
         <thead>
          <tr>
            <th></th>
           <th>グループ名</th>
           <th>紹介文</th>
            <th>メンバー数</th>
           <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
           <tr>
           <% @groups.each do |group| %>
             <th><%= image_tag group.get_file_image(100,100) %></th>
              <th><%= link_to group.name, group_path(group) %></th>
              <th><%= group.introduction %></th>
              <th>
                <%= group.users.count %>
              </th>
              <th>
                <% if group.owner_id == current_user.id %>
                  <%= link_to 'Edit', edit_group_path(group), class: "btn btn-sm btn-success" %>
                <% end %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>