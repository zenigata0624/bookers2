<div class ='container px-5 px-sm-0'>
    <div class='row'>
      <div class="col-mb-3">
        <h2 class= "mt-2"> User info</h2>
        <table class= "table">
          
          <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
          <tr>
          <th>name</th>
          <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </table>
        <div class ='row'>
          <a class="btn btn-outline-secondary btn-block" href="/users/:id/edit">
            <i class="fas fa-user-cog"></i>
          </a>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
      <div class="form_group">
      <h4>Title</h4>
      <%= f.text_field :title %>
      </div>
      <div class="form_group">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      </div>
      <div class="form_groupmt-2">
      <%= f.submit 'CreateBooks' %>
      </div>
      <% end %> 
    </div>
    <div class="col-md-8 offset-md-1">
       <h2 class ="pt-4">Users</h2>
    <table class ='table table-hover table-inverse'>
      <thead>
      <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
      </tr>
      </thead>
      <tbody>
             <tr>
           <% provide(:name, 'ユーザー一覧') %>
           <ul class="users">
             <%@users.each do|user| %>
             <td>
            <%= image_tag user.get_profile_image(100,100) %>
            </td>
            <td><%= user.name%></td>
            <td></td>
             <td> <%= link_to "show",user %></td>
        </tr>
        <%end%>
     </table>
   </div>
  </div>
 </div>